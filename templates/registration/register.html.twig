{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="mainTitle">Cr√©er un compte</h1>

    <fieldset class="registerFs">
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.roles, {'label':'Je suis'}) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.username, {'label':'Pseudo'}) }}
        {{ form_row(registrationForm.job) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <div class="center">
        <button type="submit" class="btn registerBtn">S'enregistrer</button>
        </div>
        {{ form_end(registrationForm) }}
    </fieldset>
{% endblock %}
