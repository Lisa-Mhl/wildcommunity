{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1 class="mainTitle bold">{{ article.title }}</h1>
    <h3 class="text-center publishBy">Publi√© par {{ article.author }}</h3>
    <div class="center articleDetCtn">

        {% if article.poster %}
            <img class="articleDetImg" src="{{ article.poster }}" alt="Illustration article">
        {% endif %}
        <div class="card articleDetCard">
            <article class="card-body">{{ article.content }}</article>
            {% if article.link %}
                <a class="articleLink" href="{{ article.link }}" target="_blank">En savoir plus</a><br>
            {% endif %}
            <div class="card-link text-center">
                <a href="{{ path('home') }}#Whadup">Retour aux articles</a><br>

                {% if app.user %}
                    {% if app.user is same as (article.author) %}
                        <a href="{{ path('article_edit', {'id': article.id}) }}"> Modifier l'article</a>
                    {% endif %}

                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
