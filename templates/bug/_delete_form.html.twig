<form method="post" action="{{ path('bug_delete', {'id': bug.id}) }}" onsubmit="return confirm('Etes vous certain de vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bug.id) }}">
    <button class="btn">Supprimer</button>
</form>
