{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <h1>Job index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Contract</th>
                <th>Salary</th>
                <th>Link</th>
                <th>Experience</th>
                <th>Skills</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for job in jobs %}
                <tr>
                    <td>{{ job.id }}</td>
                    <td>{{ job.title }}</td>
                    <td>{{ job.description }}</td>
                    <td>{{ job.contract }}</td>
                    <td>{{ job.salary }}</td>
                    <td>{{ job.link }}</td>
                    <td>{{ job.experience }}</td>
                    <td>{{ job.skills }}</td>
                    <td>
                        <a href="{{ path('job_show', {'id': job.id}) }}">show</a>
                        <a href="{{ path('job_edit', {'id': job.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('job_new') }}">Create new</a>

    {% else %}
        <p class="text-center">Seuls les administrateurs peuvent accéder à cette page <br>
            <a href="{{ path('app_login') }}">Connexion</a>
        </p>

    {% endif %}
{% endblock %}
